<!--components/swiper/index.wxml-->
<view>
  <swiper class="san-swiper" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
    <block wx:for="{{swiper}}" wx:key="id">
        <swiper-item>
            <image src="{{item.path}}" class="slide-image"/>
        </swiper-item>
    </block>
  </swiper>
</view>